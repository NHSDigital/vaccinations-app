{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "IAM",
      "Effect": "Allow",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:CreatePolicy",
        "iam:CreatePolicyVersion",
        "iam:CreateRole",
        "iam:CreateServiceLinkedRole",
        "iam:DeletePolicy",
        "iam:DeleteRole",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:GetPolicy",
        "iam:GetPolicyVersion",
        "iam:GetRole",
        "iam:GetRolePolicy",
        "iam:ListAttachedRolePolicies",
        "iam:ListInstanceProfilesForRole",
        "iam:ListPolicyVersions",
        "iam:ListRolePolicies",
        "iam:PutRolePolicy",
        "iam:TagPolicy",
        "iam:TagRole",
        "iam:UpdateAssumeRolePolicy",
        "iam:DeletePolicyVersion"
      ],
      "Resource": ["arn:aws:iam::${account_id}:role/${prefix}-*", "arn:aws:iam::${account_id}:policy/${prefix}-*"]
    },
    {
      "Sid": "IAMPassRole",
      "Effect": "Allow",
      "Action": ["iam:PassRole"],
      "Resource": [
        "arn:aws:iam::${account_id}:role/${prefix}-firehose-splunk-log-forwader-role",
        "arn:aws:iam::${account_id}:role/${prefix}-cache-lambda-iam-role",
        "arn:aws:iam::${account_id}:role/${prefix}-image-optimization-function-role",
        "arn:aws:iam::${account_id}:role/${prefix}-revalidation-function-role",
        "arn:aws:iam::${account_id}:role/${prefix}-server-function-role",
        "arn:aws:iam::${account_id}:role/${prefix}-chatbot-iam-role",
        "arn:aws:iam::${account_id}:role/${prefix}-alarms-forwarder-subscription-filter-role",
        "arn:aws:iam::${account_id}:role/${prefix}-firehose-transformer",
        "arn:aws:iam::${account_id}:role/${prefix}-log-forwarder-subscription-filter-role"
      ]
    }
  ]
}
